<resources>
    <declare-styleable name="npc_Theme">
        <attr name="npc_numberPickerStyle" format="reference"/>
    </declare-styleable>


    <declare-styleable name="npc_NumberPicker">
        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="npc_solidColor" format="color|reference" />
        <!-- @hide The divider for making the selection area. -->
        <attr name="npc_selectionDivider" format="reference" />
        <!-- @hide The height of the selection divider. -->
        <attr name="npc_selectionDividerHeight" format="dimension" />
        <!-- @hide The distance between the two selection dividers. -->
        <attr name="npc_selectionDividersDistance" format="dimension" />
        <!-- @hide The min height of the NumberPicker. -->
        <attr name="npc_internalMinHeight" format="dimension" />
        <!-- @hide The max height of the NumberPicker. -->
        <attr name="npc_internalMaxHeight" format="dimension" />
        <!-- @hide The min width of the NumberPicker. -->
        <attr name="npc_internalMinWidth" format="dimension" />
        <!-- @hide The max width of the NumberPicker. -->
        <attr name="npc_internalMaxWidth" format="dimension" />
        <!-- @hide The layout of the number picker. -->
        <attr name="npc_internalLayout" format="reference" />
        <!-- @hide The drawable for pressed virtual (increment/decrement) buttons. -->
        <attr name="npc_virtualButtonPressedDrawable" format="reference"/>
        <!-- @hide If true then the selector wheel is hidden until the picker has focus. -->
        <attr name="npc_hideWheelUntilFocused" format="boolean"/>
    </declare-styleable>

</resources>